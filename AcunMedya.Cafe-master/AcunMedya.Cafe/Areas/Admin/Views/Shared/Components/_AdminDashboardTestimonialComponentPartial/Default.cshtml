@model List<AcunMedya.Cafe.Entities.Testimonial>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Müşteri Yorumları</h4>
        <br />
      
            <table class="table">
                <thead>
                    <tr>
                        <th>Başlık</th>
                        <th>Açıklama</th>
                        <th>Puan</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td>
                                <div class="star">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        if (i <= item.raiting)
                                        {
                                            <span class="fa fa-star checked"></span>
                                        }
                                        else
                                        {
                                            <span class="fa fa-star"></span>
                                        }
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
  
</div>


<style>
    .fa-star.checked {
        color: gold;
    }
</style>
